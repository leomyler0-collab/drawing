{
  "name": "spooky-sketch",
  "version": "1.0.0",
  "description": "SpookySketch - Halloween-themed Drawing App",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ..",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "setup": "npm run install:all"
  },
  "keywords": ["drawing", "halloween", "canvas", "nextjs"],
  "author": "SpookySketch Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
